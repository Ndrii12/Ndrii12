<script>
  var namaPengguna = "{{nama_membership}}"; 
  var nonPremiumUsers = ["Basic", "Suspend"];
  var premiumUsers = ["Reguler", "Premium"];
  function tampilkanPopup() {
      $("#popup").show();
  }
  function tutupPopup() {
      $("#popup").hide();
  }
  function arahkanKeLink() {
      window.location.href = "https://andripedia12.bukaolshop.site/digital/235454";
  }
  $("#tombolAksi").click(function () {
      if (nonPremiumUsers.includes(namaPengguna)) {
          tampilkanPopup();
      } else if (premiumUsers.includes(namaPengguna)) {
          arahkanKeLink();
      }
  });
  $("#tutupPopup").click(tutupPopup);
</script>

<script>
  function updateStatusDot(online) {
    const statusDot = document.getElementById('status-dot');
    if (online) {
      statusDot.classList.remove('red');
      statusDot.classList.add('green');
    } else {
      statusDot.classList.remove('green');
      statusDot.classList.add('red');
    }
  }

  function checkInternetConnection() {
    const online = navigator.onLine;
    updateStatusDot(online);
  }

  window.addEventListener('online', () => checkInternetConnection());
  window.addEventListener('offline', () => checkInternetConnection());

  // Check initial status
  checkInternetConnection();
</script>
  <script>
    //<![CDATA[
    var textContainer1 = document.getElementById("textContainer1");
    var textContainer2 = document.getElementById("textContainer2");
    var words1 = ["Instan", "Otomatis", "Aman"];
    var words2 = ["Saldo", "Mudah", "Aman"];
    var currentIndex1 = 0;
    var currentIndex2 = 0;

    function changeText(container, words, currentIndex) {
      container.innerHTML = words[currentIndex];
      currentIndex = (currentIndex + 1) % words.length;
      animateText(container);
      return currentIndex;
    }

    function animateText(container) {
      container.style.opacity = 0;

      setTimeout(function () {
        container.style.opacity = 1;
      }, 100);
    }

    // Initial text change
    currentIndex1 = changeText(textContainer1, words1, currentIndex1);
    currentIndex2 = changeText(textContainer2, words2, currentIndex2);

    // Change text every 3 seconds
    setInterval(function () {
      currentIndex1 = changeText(textContainer1, words1, currentIndex1);
      currentIndex2 = changeText(textContainer2, words2, currentIndex2);
    }, 3000);
    //]]>
  </script>
  <script type="text/javascript">
    var h = (new Date()).getHours();
    var m = (new Date()).getMinutes();
    var s = (new Date()).getSeconds();
    var greetingMessage = "";

    if (h >= 4 && h < 10) greetingMessage = "Selamat pagi";
    if (h >= 10 && h < 15) greetingMessage = "Selamat siang";
    if (h >= 15 && h < 18) greetingMessage = "Selamat sore";
    if (h >= 18 || h < 4) greetingMessage = "Selamat malam";

    var greetingElement = document.getElementById("greetingMessage");
    if (greetingElement) {
      greetingElement.innerHTML = greetingMessage;
    }
  </script>
  <script>function rubah(angka) {
    var reverse = angka.toString().split('').reverse().join(''),
      ribuan = reverse.match(/\d{1,3}/g);
    ribuan = ribuan.join('.').split('').reverse().join('');
    return "Rp" + ribuan;
  }
  document.getElementById("saldoku").innerText = rubah(document.getElementById("saldoku").textContent);</script>
